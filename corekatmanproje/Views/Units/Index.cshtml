@model IEnumerable<corekatmanproje.Models.Units>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Unit List</h1>
<br />
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-danger">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.unitsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unitsNOE)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.unitsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unitsNOE)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.unitsID">Edit</a> |                
                <a asp-action="Delete" asp-route-id="@item.unitsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

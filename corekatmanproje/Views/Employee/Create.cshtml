@model coreModel.Model.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Add Employee</h1>
<br />
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="employeeNameSurname" class="control-label"></label>
                <input asp-for="employeeNameSurname" class="form-control" />
                <span asp-validation-for="employeeNameSurname" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="employeeGender" class="control-label"></label>
                <input asp-for="employeeGender" class="form-control" />
                <span asp-validation-for="employeeGender" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="employeeDOS" class="control-label"></label>
                <input asp-for="employeeDOS" class="form-control" />
                <span asp-validation-for="employeeDOS" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="employeeShift" /> @Html.DisplayNameFor(model => model.employeeShift)
                </label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="employeeWage" class="control-label"></label>
                <input asp-for="employeeWage" class="form-control" />
                <span asp-validation-for="employeeWage" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="employeeBounty" class="control-label"></label>
                <input asp-for="employeeBounty" class="form-control" />
                <span asp-validation-for="employeeBounty" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="dutyID" class="control-label"></label>
                <input asp-for="dutyID" class="form-control" />
                <span asp-validation-for="dutyID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="titleID" class="control-label"></label>
                <input asp-for="titleID" class="form-control" />
                <span asp-validation-for="titleID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>



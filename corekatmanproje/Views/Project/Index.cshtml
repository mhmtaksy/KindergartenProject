@model IEnumerable<corekatmanproje.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Project List</h1>
<br />
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-danger">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.projectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.projectDOS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.projectDOE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dutyID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.projectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.projectDOS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.projectDOE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dutyID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.projectID">Edit</a> |
                
                <a asp-action="Delete" asp-route-id="@item.projectID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
